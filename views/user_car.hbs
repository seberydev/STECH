  </section>
</div>

<form id="form-checkout" class="fMP userCar01 flex justify-center items-center bg-gray-200 m-6 hidden"
  style="padding: 20px;">
  <input id="MP_PUBLIC_KEY" hidden type="text" value={{MP_PUBLIC_KEY}}>
  <button class="bF" id="back">
    <span class="label">Atrás</span>
  </button>
  <p class="text-2xl m-6 flex font-medium">Pagar con tarjeta de crédito</p>
    <p id="tot1" class="text-2xl font-medium">Total a Pagar: $0</p>
  <div class="flex justify-center flex-col gap-5 items-center bg-gray-200 m-6">
    <input id="MP_PUBLIC_KEY" hidden type="text" value={{MP_PUBLIC_KEY}}>
    <input type="text" required style="padding: 5px" name="cardNumber" id="form-checkout__cardNumber" />
    <input type="text" required style="padding: 5px" name="cardExpirationDate" id="form-checkout__cardExpirationDate" />
    <input type="text" required style="padding: 5px" name="cardholderName" id="form-checkout__cardholderName" />
    <input type="email" required style="padding: 5px" name="cardholderEmail" id="form-checkout__cardholderEmail" />
    <input type="text" required style="padding: 5px" name="securityCode" id="form-checkout__securityCode" />
    <select name="issuer" required id="form-checkout__issuer"></select>
    <input style="padding: 5px" required type="text" name="identificationNumber" id="form-checkout__identificationNumber" />
    <select name="installments" id="form-checkout__installments"></select>
    <button type="submit" id="form-checkout__submit"
      class="bg-blue-500 text-white h-10 self-center p-2 hover:bg-blue-600 duration-200 cursor-pointer">Pagar</button>
    <progress value="0" class="progress-bar">Cargando...</progress>
  </div>
</form>

<form id="form-oxxo" class="fOXXO userCar01 flex justify-center items-center bg-gray-200 m-6 hidden"
  style="padding: 20px;">
  <button class="bF" id="back">
    <span class="label">Atrás</span>
  </button>
  <p class="text-2xl m-6 flex font-medium">Pagar por OXXO</p>
    <p id="tot2" class="text-2xl font-medium">Total a Pagar: $0</p>
  <input style="padding: 5px" type="email" name="cardholderEmail" id="form-oxxo__cardholderEmail" placeholder="E-mail"
    class="border-gray-300 border-b-2  bg-gray-50" />
  <button type="submit" id="form-oxxo__submit"
    class="bg-blue-500 text-white h-10 self-center p-2 hover:bg-blue-600 duration-200 cursor-pointer"
    style="margin-left: 20px;">Pagar</button>
</form>

<div id="successContainer" class="flex flex-col justify-center  bg-blue-500 m-6"
  style="display: none; align-items: flex-start;">
  <p id="successText" class="text-2xl m-6 font-medium text-white">¡Gracias Por Tu Compra!</p>
  <a href="/" class="bg-white p-2 hover:bg-blue-600 hover:text-white duration-200"
    style="margin-left: 20px; margin-bottom: 20px; display:inline-block;">Inicio</a>
</div>

