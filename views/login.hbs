<form  action="/login" id="form" method="post" class="login flex justify-center items-center bg-gray-200 h-screen" style="margin: 0;" >
  <div style="overflow: hidden" class="bg-white h-96 w-4/12">
    <span class="text-2xl m-6 flex font-medium">Inicia Sesión</span>
    <div class="w-3/4 m-6">
      <span>
        <h1 class="text-sm text-gray-400">Email</h1>
        <input type="email" name="email" id="email" required class="border-gray-300 border-b-2 w-full bg-gray-50">
      </span>
    </div>
    <div class="w-3/4 m-6">
      <span>
        <h1 class="text-sm text-gray-400">Contraseña</h1>
        <input type="password" name="contrasena" id="pass" required class="border-gray-300 border-b-2 w-full bg-gray-50">
      </span>
    </div>
    <span class="flex justify-start m-6">
      <input type="submit" value="Iniciar Sesión" class="bg-blue-500 text-white h-10 self-center p-2 hover:bg-blue-600 duration-200 cursor-pointer">
    </span>
    <span class="flex justify-center m-5 border-t-2 border-t-gray-200 mt-12">
      <h3 class="m-4">
        No tienes cuenta?
        <a href="/login/signup" class="text-blue-500 hover:underline">Crea una aquí</a>
      </h3>
    </span>
  </div>
</form>

